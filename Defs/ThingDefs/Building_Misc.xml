<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<ThingDef ParentName="BuildingBase">
    <defName>PES_watchtower</defName>
    <label>WatchTower</label>
	  <thingClass>Building</thingClass>
    <description>A tall tower where one colonist can go on sentry duty, keeping a vigilant eye on the surrounding and alert the colony in time when danger approaches</description>
    <graphicData>
      <texPath>Things/Buildings/Watchtower</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(3, 4)</drawSize>
      <shadowData>
        <volume>(3.0, 3.0, 3.0)</volume>
      </shadowData>
    </graphicData>
    <costStuffCount>300</costStuffCount>
    <costList>
      <Steel>50</Steel>
    </costList>
    <stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
      <li>Stony</li>
		</stuffCategories>
    <placeWorkers>
      <li>PlaceWorker_NotUnderRoof</li>
    </placeWorkers>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <MaxHitPoints>500</MaxHitPoints>
      <WorkToBuild>2000</WorkToBuild>
      <Flammability>0.4</Flammability>
	    <Beauty>0</Beauty>
    </statBases>
	  <building>
      <allowAutoroof>false</allowAutoroof>
	  </building>
    <blockWind>true</blockWind>
	  <fillPercent>0.5</fillPercent>
    <interactionCellIcon>DiningChair</interactionCellIcon>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
	  <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <designationCategory>Security</designationCategory>
    <rotatable>false</rotatable>
    <canOverlapZones>false</canOverlapZones>
    <size>(3, 3)</size>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
  </ThingDef>
</Defs>