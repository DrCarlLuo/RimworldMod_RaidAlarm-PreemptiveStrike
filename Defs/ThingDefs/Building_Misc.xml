<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<ThingDef ParentName="BuildingBase">
    <defName>PES_PremitiveWatchtower</defName>
    <label>Premitive WatchTower</label>
	  <thingClass>Building</thingClass>
    <description>A premitive tall tower where one colonist can go on sentry duty, keeping a vigilant eye on the surrounding, and when danger approaches, alert the colony in time by making smoke signal.</description>
    <graphicData>
      <texPath>Things/Buildings/PrimitiveWatchTower</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(3, 7)</drawSize>
      <shadowData>
        <volume>(3.0, 3.0, 3.0)</volume>
      </shadowData>
    </graphicData>
    <costList>
      <WoodLog>300</WoodLog>
    </costList>
    <comps>
      <li Class="PreemptiveStrike.Things.CompProperties_Detection">
        <compClass>PreemptiveStrike.Things.CompDetection_ManualDevice</compClass>
        <visionRangeProvide>1</visionRangeProvide>
        <detectionRangeProvide>3</detectionRangeProvide>
        <NotUsableUnderDarkness>true</NotUsableUnderDarkness>
        <AffectedByOperatorSightAbility>true</AffectedByOperatorSightAbility>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_NotUnderRoof</li>
    </placeWorkers>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <WorkToBuild>2000</WorkToBuild>
      <Flammability>1</Flammability>
	    <Beauty>0</Beauty>
    </statBases>
	  <building>
      <allowAutoroof>false</allowAutoroof>
	  </building>
    <blockWind>true</blockWind>
	  <fillPercent>0.5</fillPercent>
    <interactionCellOffset>(0,0,3)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
	  <passability>PassThroughOnly</passability>
    <pathCost>10</pathCost>
    <designationCategory>Security</designationCategory>
    <rotatable>false</rotatable>
    <canOverlapZones>false</canOverlapZones>
    <size>(3, 3)</size>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
  </ThingDef>

	<ThingDef ParentName="BuildingBase">
    <defName>PES_watchtower</defName>
    <label>WatchTower</label>
	  <thingClass>Building</thingClass>
    <description>Modern construction technology made it possible to build a watch tower much taller than a primitive one. Besides the height, some modern electronic devices can make the colonist on sentry duty see further. Can work without electricity, but only provide half the vision range and detection range.</description>
    <graphicData>
      <texPath>Things/Buildings/Watchtower</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(6, 12)</drawSize>
      <shadowData>
        <volume>(3.0, 3.0, 3.0)</volume>
      </shadowData>
    </graphicData>
    <costList>
      <Steel>300</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>50</basePowerConsumption>
      </li>
      <li Class="CompProperties_Breakdownable"/>
      <li Class="CompProperties_Flickable"/>
      <li Class="PreemptiveStrike.Things.CompProperties_Detection">
        <compClass>PreemptiveStrike.Things.CompDetection_ManualDevice</compClass>
        <visionRangeProvide>2</visionRangeProvide>
        <detectionRangeProvide>6</detectionRangeProvide>
        <NotUsableUnderDarkness>true</NotUsableUnderDarkness>
        <AffectedByOperatorSightAbility>true</AffectedByOperatorSightAbility>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_NotUnderRoof</li>
    </placeWorkers>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <MaxHitPoints>1000</MaxHitPoints>
      <WorkToBuild>2000</WorkToBuild>
      <Flammability>0</Flammability>
	    <Beauty>0</Beauty>
    </statBases>
	  <building>
      <allowAutoroof>false</allowAutoroof>
	  </building>
    <blockWind>true</blockWind>
	  <fillPercent>0.5</fillPercent>
    <interactionCellOffset>(2,0,3)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
	  <passability>PassThroughOnly</passability>
    <pathCost>10</pathCost>
    <designationCategory>Security</designationCategory>
    <rotatable>false</rotatable>
    <canOverlapZones>false</canOverlapZones>
    <size>(6, 6)</size>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
  </ThingDef>

