  <ResearchProjectDef>
    <defName>PES_SearchLight</defName>
    <label>Advanced lighting technology</label>
    <description>Install searchlight in a watchtower so that it can be used during the night.</description>
    <baseCost>1500</baseCost>
    <techLevel>Industrial</techLevel>
    <researchViewX>2</researchViewX>
    <researchViewY>1.8</researchViewY>
