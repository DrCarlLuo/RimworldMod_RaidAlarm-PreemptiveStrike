    <baseCost>1500</baseCost>
    <techLevel>Industrial</techLevel>
    <researchViewX>3</researchViewX>
    <researchViewY>3.5</researchViewY>
    <prerequisites>
      <li>PES_RADAR</li>
      <li>PES_SkyIDL</li>
    </prerequisites>
    <tab>PreemptiveStrike</tab>
  </ResearchProjectDef>

