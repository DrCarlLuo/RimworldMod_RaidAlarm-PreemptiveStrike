    <techLevel>Industrial</techLevel>
    <researchViewX>4</researchViewX>
    <researchViewY>0</researchViewY>
    <prerequisites>
      <li>GroundPenetratingScanner</li>
    </prerequisites>
    <tab>PreemptiveStrike</tab>
  </ResearchProjectDef>

